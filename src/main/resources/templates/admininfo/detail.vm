<div class="templatemo-content-widget white-bg">
    <h2 class="margin-bottom-10">详细信息</h2>
    <form action="#springUrl('/adminInfo/save')" class="templatemo-login-form" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userid" id="userid" value="$!adminInfo.userid"/>
        <div class="row form-group">
            <div class="col-lg-6 col-md-6 form-group">
                <label for="inputFirstName">用户名</label>
                <input type="text" class="form-control" name="username" id="username" value="$!adminInfo.username" placeholder="John">
            </div>
            <div class="col-lg-6 col-md-6 form-group">
                <label for="inputLastName">姓名</label>
                <input type="text" class="form-control" name="realname" id="realname" value="$!adminInfo.realname" placeholder="Smith">
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-6 col-md-6 form-group">
                <label for="inputUsername">电话</label>
                <input type="text" class="form-control" name="uphone" id="uphone" value="$!adminInfo.uphone" placeholder="Admin">
            </div>
            <div class="col-lg-6 col-md-6 form-group">
                <label for="inputEmail">邮箱</label>
                <input type="email" class="form-control" name="email" id="email" value="$!adminInfo.email" placeholder="admin@company.com">
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-6 col-md-6 form-group">
                <label class="control-label templatemo-block">状态</label>
                <div class="templatemo-inline-block">
                    <input type="radio" name="isvalid" id="r4" value="true">
                    <label for="r4" class="font-weight-400"><span></span>生效</label>
                </div>
                <div class="templatemo-inline-block">
                    <input type="radio" name="isvalid" id="r5" value="false" checked>
                    <label for="r5" class="font-weight-400"><span></span>失效</label>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-12 form-group">
                <label class="control-label" for="inputNote">描述</label>
                <textarea class="form-control" name="desc" id="desc" value="$!adminInfo.desc" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group text-right">
            <button type="submit" class="templatemo-blue-button">保存</button>
            <button type="reset" class="templatemo-white-button">重置</button>
            <button onclick="location='list'" class="templatemo-white-button">返回</button>
        </div>
    </form>
</div>